<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="800.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AffichageCommentBack">
   <children>
      <StackPane>
         <Text text="Liste des Commentaires">
            <font>
               <Font name="Arial" size="32.0" />
            </font>
         </Text>
      </StackPane>
      <HBox prefHeight="120.0" prefWidth="1000.0" spacing="20.0" style="-fx-padding: 10; -fx-background-color: #b281ff;">
         <children>
            <TextField fx:id="filtre" onKeyPressed="#handleSearch" prefHeight="40.0" prefWidth="400.0" promptText="Rechercher..." style="-fx-background-color: #ffffff; -fx-border-color: #b281ff; -fx-border-width: 2px;">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </TextField>
            <Button mnemonicParsing="false" onAction="#supprimer" prefHeight="40.0" prefWidth="150.0" styleClass="menu-button" text="Supprimer">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#Back" prefHeight="40.0" prefWidth="150.0" styleClass="menu-button" text="Retour">
               <font>
                  <Font name="Arial" size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <TableView fx:id="tableView" layoutY="120.0" prefHeight="700.0" prefWidth="1000.0" style="-fx-background-color: white; -fx-border-color: #b281ff; -fx-border-width: 2px;">
         <columns>
            <TableColumn fx:id="TitrePub" prefWidth="160.0" text="Titre Pub" />
            <TableColumn fx:id="userName" prefWidth="150.0" text="User" />
            <TableColumn fx:id="message" prefWidth="320.0" text="Contenu" />
            <TableColumn fx:id="date" prefWidth="130.0" text="Date" />
         </columns>
      </TableView>
   </children>
</AnchorPane>
