<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@style.css" id="anchorPane" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pi.blog.controllers.BlogViewController">
    <children>
        <!-- Background Image -->
        <ImageView fitHeight="600.0" fitWidth="800.0" pickOnBounds="true">
            <image>
                <Image url="@428981031_926819762508580_4971344781829720032_n.jpg" />
            </image>
        </ImageView>

        <!-- Button to Redirect -->
        <Button styleClass="menu-button" layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#redirectToAffichagePostFront" prefHeight="60.0" prefWidth="200.0" text="Go to Posts">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
