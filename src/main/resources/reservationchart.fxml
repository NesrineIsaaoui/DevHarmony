<AnchorPane prefHeight="546.0" prefWidth="863.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReservationChartController">
   <children>
      <ImageView fitHeight="587.0" fitWidth="922.0" layoutX="-1.0" layoutY="-4.0" pickOnBounds="true" preserveRatio="true">
