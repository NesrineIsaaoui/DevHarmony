      <MenuButton layoutX="751.0" layoutY="195.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="110.0" styleClass="button" stylesheets="@style.css" text="statistiques">
        <items>
          <MenuItem mnemonicParsing="false" text="piechart">
               <graphic>
                  <PieChart fx:id="userCoursePieChart" prefHeight="381.0" prefWidth="500.0" />
               </graphic>
            </MenuItem>
          <MenuItem mnemonicParsing="false" text="barchart">
               <graphic>
                  <BarChart fx:id="revenues">
                    <xAxis>
                      <CategoryAxis side="BOTTOM" />
